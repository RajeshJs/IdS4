{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "@shared": [
        "app/shared/index"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core": [
        "app/core/index"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    },
    "baseUrl": "./"
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
